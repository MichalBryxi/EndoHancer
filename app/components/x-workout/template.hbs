{{#paper-card as |card|}}
  {{#card.title as |title|}}
    {{#title.text as |text|}}
      {{#text.headline}}
          {{format-number workout.distance format="0.0"}}km
          @
          {{format-number workout.speedAvg format="0.0"}}km/h
      {{/text.headline}}

      {{#text.subhead}}
        <a href="{{workoutURL}}" target="_blank">{{moment-format workout.startTime "YYYY-MM-DD"}}</a> 
        -
        {{workout.name}}

      {{/text.subhead}}

    {{/title.text}}

    <md-card-title-media>
      {{x-workout/icon sport=workout.sport class="md-media-sm"}}
    </md-card-title-media>

  {{/card.title}}

  {{#card.actions}}
    {{#paper-checkbox value=workout.isSelected onChange=(action (mut workout.isSelected))}}
    {{/paper-checkbox}}
  {{/card.actions}}
{{/paper-card}}
